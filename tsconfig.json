{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2016",
        "moduleResolution": "Bundler",
        "declaration": true,
        "strict": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "jest",
        ],
        "skipLibCheck": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "outDir": "dist",
    },
    "include": [
        "lib/**/*",
        "test/**/*.ts",
    ],
}